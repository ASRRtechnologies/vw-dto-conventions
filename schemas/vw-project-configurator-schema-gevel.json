{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://form.nl/conventions.json",
  "type": "object",
  "title": "FORM json file structure conventions",
  "required": [
    "projectName",
    "source",
    "type",
    "options"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "default": "gevel",
      "examples": [
        "gevel"
      ],
      "pattern": "gevel"
    },
    "options": {
      "$id": "#/properties/options",
      "type": "object",
      "required": [
        "name",
        "id",
        "level",
        "position",
        "rotation",
        "elements"
      ],
      "properties": {
        "name": {
          "$id": "#/properties/options/properties/name",
          "type": "string",
          "default": "Voorgevel",
          "pattern": "^(.*)$"
        },
        "level": {
          "$id": "#/properties/options/properties/id",
          "type": "integer",
          "title": "The Level Schema"
        },
        "id": {
          "$id": "#/properties/options/properties/id",
          "type": "string",
          "enum": [
            "voorgevel",
            "voorgevel_1e"
          ]
        },
        "position": {
          "$id": "#/properties/options/properties/position",
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "$id": "#/properties/content/properties/blocks/items/properties/position/properties/x",
              "type": "number",
              "title": "The X Schema",
              "default": 0,
              "examples": [
                0
              ]
            },
            "y": {
              "$id": "#/properties/content/properties/blocks/items/properties/position/properties/y",
              "type": "number",
              "title": "The Y Schema",
              "default": 0,
              "examples": [
                0
              ]
            },
            "z": {
              "$id": "#/properties/content/properties/blocks/items/properties/position/properties/z",
              "type": "number",
              "title": "The Z Schema",
              "default": 0,
              "examples": [
                0
              ]
            }
          }
        },
        "rotation": {
          "$id": "#/properties/options/properties/rotation",
          "type": "object",
          "required": [
            "x",
            "y",
            "z"
          ],
          "properties": {
            "x": {
              "$id": "#/properties/content/properties/blocks/items/properties/rotation/properties/x",
              "type": "number",
              "title": "The X Schema",
              "default": 0,
              "examples": [
                1
              ]
            },
            "y": {
              "$id": "#/properties/content/properties/blocks/items/properties/rotation/properties/y",
              "type": "number",
              "title": "The Y Schema",
              "default": 0,
              "examples": [
                0
              ]
            },
            "z": {
              "$id": "#/properties/content/properties/blocks/items/properties/rotation/properties/z",
              "type": "number",
              "title": "The Z Schema",
              "default": 0,
              "examples": [
                0
              ]
            }
          }
        },
        "elements": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type",
              "position",
              "width",
              "height"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "sparing",
                  "kozijn",
                  "rollaag",
                  "vlakvulling",
                  "dorpel"
                ]
              },
