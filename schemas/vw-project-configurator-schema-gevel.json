{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://form.nl/conventions.json",
  "type": "object",
  "title": "FORM json file structure conventions",
  "required": [
    "projectName",
    "source",
    "type",
    "options"
  ],
  "properties": {
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "title": "The Configuration_Type Schema",
      "default": "gevel",
      "examples": [
        "gevel"
      ],
      "pattern": "gevel"
    },
    "options": {
      "$id": "#/properties/options",
      "type": "object",
      "title": "The Content Schema",
      "required": [
        "name",
        "id",
        "level",
        "position",
        "rotation",
        "elements"
      ],
      "properties": {
        "name": {
          "$id": "#/properties/content/properties/name",
          "type": "string",
          "title": "The Name Schema",
          "default": "",
          "pattern": "^(.*)$"
        }
      }
    }
  }
}