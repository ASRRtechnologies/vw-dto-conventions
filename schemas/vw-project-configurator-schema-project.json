            "type": "object",
            "required": [
              "name",
              "position",
              "rotation",
              "houses"
            ],
            "properties": {
              "name": {
                "type": "string",
                "default": "Woningblok",
                "pattern": "^(.*)$"
              },
              "position": {
                "type": "object",
                "required": [
                  "x",
                  "y",
                  "z"
                ],
                "properties": {
                  "x": {
                    "type": "number"
