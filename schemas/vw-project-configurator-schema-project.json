  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://form.nl/conventions.json",
  "type": "object",
  "title": "FORM json file structure conventions",
  "required": [
    "projectName",
    "source",
    "type",
    "options"
  ],
  "properties": {
    "projectName": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "default": "project",
      "examples": [
        "project"
      ],
      "pattern": "project"
    },
    "options": {
      "type": "object",
      "required": [
        "name",
        "blocks"
      ],
      "properties": {
        "name": {
          "type": "string"
